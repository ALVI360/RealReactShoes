{
  "name": "shoe-store",
  "version": "0.1.0",
  "private": true,

  "dependencies": {
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "nodemon": "^2.0.7",
    "save": "^2.4.0"
  },
  "scripts": {
    "build": "cd client && npm run build",
    "start": "node server",
    "start:client": "cd client && npm start",
    "start:server": "cd server && npm start",
    "start:dev": "npm-run-all -p start:client start:server",
    "install:dev": "npm i && cd client && npm i && cd ../server && npm i",
    "postinstall": "cd server && npm i"
  },
  "license": "MIT"
}